{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "checkJs": false,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "preserve",
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictFunctionTypes": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "react"],
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["node_modules","**/__tests__/*","src/**/*.spec.ts*", "src/**/*.test.ts*"],
}
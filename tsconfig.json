    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react"],
